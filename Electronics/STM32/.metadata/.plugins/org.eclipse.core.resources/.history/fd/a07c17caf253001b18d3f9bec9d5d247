void TIM15_IRQHandler(void){

	GPIOB->ODR ^= BIT5;

	if(thrower_data[3] < BIT4){
		if(thrower_data[0] & thrower_data[3]){
			// Set PWM to translate into 1
			TIM15->CCR1 = 3675;
		}
		else{
			// Set PWM to translate into 0
			TIM15->CCR1 = 1600;
		}
		thrower_data[3] = thrower_data[3] << 1;
	}
	else if(thrower_data[3] == BIT4){
		TIM15->CCR1 = 1600;
		thrower_data[3] = thrower_data[3] << 1;
	}
	else if(thrower_data[3] > BIT4 && thrower_data[3] != BIT15){
		if(thrower_data[0] & thrower_data[3]){
			// Set PWM to translate into 1
			TIM15->CCR1 = 3675;
		}
		else{
			// Set PWM to translate into 0
			TIM15->CCR1 = 1600;
		}
		thrower_data[3] = thrower_data[3] << 1;
	}
	else if(thrower_data[3] == BIT15){
		if(thrower_data[0] & thrower_data[3]){
			// Set PWM to translate into 1
			TIM15->CCR1 = 3675;
		}
		else{
			// Set PWM to translate into 0
			TIM15->CCR1 = 1600;
		}
		thrower_data[3] =BIT0;
		redundancy_count++;
		if(redundancy_count == 5){
			redundancy_count = 0;
			TIM15->DIER &= ~BIT0;
		}
	}
	TIM15->SR &= ~BIT0;
//	if(thrower_data[3] > BIT4){
//		if(thrower_data[0] & thrower_data[3]){
//			// Set PWM to translate into 1
//			TIM15->CCR1 = 3675;
//		}
//		else{
//			// Set PWM to translate into 0
//			TIM15->CCR1 = 1600;
//		}
//		thrower_data[3] = thrower_data[3] << 1;
//	}
//	else if(thrower_data[3] == BIT4){	// Request telemetry BIT
//		TIM15->CCR1 = 1600;				// Disable by default
//		thrower_data[3] = thrower_data[3] >> 1;
//	}
//	else if(thrower_data[3] < BIT4 && thrower_data[3] != BIT0){
//		if(thrower_data[0] & thrower_data[3]){
//			// Set PWM to translate into 1
//			TIM15->CCR1 = 3675;
//		}
//		else{
//			// Set PWM to translate into 0
//			TIM15->CCR1 = 1600;
//		}
//
//		thrower_data[3] >> 1;
//	}
//	else if(thrower_data[3] == BIT0){
//		if(thrower_data[0] & thrower_data[3]){
//			// Set PWM to translate into 1
//			TIM15->CCR1 = 3675;
//		}
//		else{
//			// Set PWM to translate into 0
//			TIM15->CCR1 = 1600;
//		}
//		thrower_data[3] = BIT15;
//		redundancy_count++;
//		if(redundancy_count == 5);{
//			TIM15->DIER &= ~BIT0;
//		}
//	}

	TIM15->SR &= ~BIT0;
}
